@model IEnumerable<Tour>

@{
    ViewData["Title"] = "Danh sách Tour";
}

<div class="col-lg-6 col-12 text-center text-lg-start" data-aos="fade-right">
    <h1 class="mb-4">Danh sách Tour hiện có</h1>
</div>

<div class="row">
@foreach (var tour in Model)
{
    <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body">
                <h5 class="card-title">@tour.Name</h5>
                <p class="card-text">
                    <strong>Điểm đến:</strong> @tour.Destination?.Name <br />
                    <strong>Thời gian:</strong> 
                    @tour.StartDate.ToString("dd/MM/yyyy") - 
                    @tour.EndDate.ToString("dd/MM/yyyy") <br />
                    <strong>Giá:</strong> @tour.Price.ToString("N0") VNĐ
                </p>

                <a asp-action="Details" asp-route-id="@tour.TourId"
                   class="btn btn-outline-primary btn-sm">
                    Xem chi tiết
                </a>
            </div>
        </div>
    </div>
}
</div>
